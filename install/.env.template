# =============================================================================
# Minerva Configuration
# =============================================================================
# Copy this file to .env and fill in the required values.
# Only TELEGRAM_BOT_TOKEN and ADMIN_ID are required to start.

# =============================================================================
# Required
# =============================================================================
TELEGRAM_BOT_TOKEN=         # Get from @BotFather on Telegram
ADMIN_ID=                   # Your Telegram user ID (send /start to @userinfobot)

# =============================================================================
# Server
# =============================================================================
BASE_URL=                   # Public URL for webhooks (e.g., https://minerva.example.com)
WEBHOOK_PORT=8080           # HTTP server port
DATABASE_PATH=./minerva.db  # SQLite database path (absolute path recommended for production)

# =============================================================================
# AI
# =============================================================================
MINERVA_WORKSPACE=./workspace  # Directory where Claude CLI runs

# =============================================================================
# Personalization
# =============================================================================
OWNER_NAME=                 # Your name (used in voice call prompts, e.g., "John")
DEFAULT_COUNTRY_CODE=+1     # Default country code for phone numbers without prefix

# =============================================================================
# Optional - Email (Resend)
# =============================================================================
RESEND_API_KEY=             # Resend API key (https://resend.com)
RESEND_WEBHOOK_SECRET=      # Svix webhook signing secret for inbound emails
FROM_EMAIL=                 # Sender address (e.g., "Minerva <minerva@yourdomain.com>")
VERIFIED_EMAIL_DOMAINS=     # Comma-separated list of verified sending domains (e.g., "example.com,other.com")

# =============================================================================
# Optional - Voice Calls (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=         # Twilio Account SID
TWILIO_AUTH_TOKEN=          # Twilio Auth Token
TWILIO_PHONE_NUMBER=        # Twilio phone number (e.g., +14155551234)

# =============================================================================
# Optional - Voice AI (Gemini Live)
# =============================================================================
GOOGLE_API_KEY=             # Google AI API key for Gemini Live real-time voice
GEMINI_MODEL=               # Gemini model for voice (default: models/gemini-2.5-flash-native-audio-latest)
GEMINI_VOICE=               # Gemini voice name (default: Zephyr)
VOICE_LANGUAGE=             # Default language for voice calls (default: Spanish)

# =============================================================================
# Optional - Remote Agents
# =============================================================================
AGENT_PASSWORD=             # Password for agent WebSocket authentication

# =============================================================================
# Optional - Encrypted Relay
# =============================================================================
RELAY_URL=                  # Relay service WebSocket URL
RELAY_KEY=                  # Relay service authentication key

# =============================================================================
# Optional - Background Tasks
# =============================================================================
TASKS_DIR=./minerva-tasks   # Directory for background task files

# =============================================================================
# Optional - Context
# =============================================================================
MAX_CONTEXT_MESSAGES=20     # Number of recent messages to include as AI context
