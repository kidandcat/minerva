# Required
TELEGRAM_BOT_TOKEN=         # Get from @BotFather on Telegram
ADMIN_ID=                   # Your Telegram user ID (send /start to @userinfobot)

# Database
DATABASE_PATH=./minerva.db  # Absolute path recommended for production

# AI
MINERVA_WORKSPACE=./workspace  # Directory where Claude CLI runs

# Optional - Email (Resend)
RESEND_API_KEY=
RESEND_WEBHOOK_SECRET=

# Optional - Voice calls (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Optional - Webhook server
WEBHOOK_PORT=8080

# Optional - Agent authentication
AGENT_PASSWORD=             # Agents must be built with matching password

# Optional - Context
MAX_CONTEXT_MESSAGES=20     # Number of recent messages to include as context
